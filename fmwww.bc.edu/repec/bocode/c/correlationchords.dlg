SCRIPT b1_4on
	BEGIN
		main.tx_b1_4a.enable
		main.col_b1_4a.enable
		main.tx_b1_4b.enable
		main.spi_b1_4b.enable
	END

SCRIPT b1_4off
	BEGIN
		main.tx_b1_4a.disable
		main.col_b1_4a.disable
		main.tx_b1_4b.disable
		main.spi_b1_4b.disable
	END

SCRIPT b1_5on
	BEGIN
		main.tx_b1_5a.enable
		main.col_b1_5a.enable
		main.tx_b1_5b.enable
		main.spi_b1_5b.enable
	END

