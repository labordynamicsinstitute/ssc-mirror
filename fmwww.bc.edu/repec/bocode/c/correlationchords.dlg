PROGRAM bul_b1
	BEGIN
		call main.tx_b1_1.enable
		call main.ed_b1_1.enable
		call main.tx_b1_2.enable
		call main.col_b1_2.enable
		call main.tx_b1_3.enable
		call main.spi_b1_3.enable
		call main.ck_b1_4.enable
		if main.ck_b1_4 {
			call main.tx_b1_4a.enable
			call main.col_b1_4a.enable
			call main.tx_b1_4b.enable
			call main.spi_b1_4b.enable
		}
		call main.ck_b1_5.enable
		if main.ck_b1_5 {		
			call main.tx_b1_5a.enable
			call main.col_b1_5a.enable
			call main.tx_b1_5b.enable
			call main.spi_b1_5b.enable
		}	
		call main.tx_b2_1.disable
		call main.ed_b2_1.disable
		call main.tx_b2_4.disable
		call main.tx_b2_4a.disable
		call main.col_b2_4a.disable
		call main.tx_b2_4b.disable
		call main.spi_b2_4b.disable
		call main.tx_b2_5.disable
		call main.tx_b2_5a.disable
		call main.col_b2_5a.disable
		call main.tx_b2_5b.disable
		call main.spi_b2_5b.disable
		call main.ck_b2_6.disable
		call main.ck_b2_7.disable				
	END

